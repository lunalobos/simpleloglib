{
    "threads": 10,
    "batchSize": 100,
    "appenders": [
        {
            "name": "DatabaseAppender",
            "type": "jdbc",
            "connectURL": "jdbc:sqlite:sample.db",
            "tableName": "application_log",
            "columns": [
                {
                    "name": "event_id"
                },
                {
                    "name": "event_date"
                },
                {
                    "name": "level"
                },
                {
                    "name": "message"
                },
                {
                    "name": "logger"
                },
                {
                    "name": "throwable"
                }
            ],
            "filter": {
                "level": "DEBUG"
            }
        },
        {
            "name": "ConsoleAppender",
            "type": "console",
            "filter": {
                "level": "INFO"
            }
        },
        {
            "name": "FileAppender",
            "type": "file",
            "filePath": "error.log",
            "filter": {
                "level": "ERROR"
            }
        }
    ],
    "layout": "[%level] %date - %logger - %thread : %msg %throwable"
}